            <Button mnemonicParsing="false" onAction="#onAddWordButton" prefWidth="100.0" text="Add">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <tooltip>
                  <Tooltip text="Add word to the list" />
               </tooltip>
            </Button>
            <Button mnemonicParsing="false" onAction="#onRemoveWordAction" prefWidth="100.0" text="Remove">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <tooltip>
                  <Tooltip text="Remove a word from the list" />
               </tooltip>
            </Button>
         </children>
      </VBox>
   </children>
